    // ---------------------------------------------------------
    // PowerShell Core (pwsh) Tasks
    // ---------------------------------------------------------
    {
      "label": "pwsh: Run PSScriptAnalyzer",
      "type": "shell",
      "command": "pwsh",
      "args": [
        "-NoProfile",
        "-Command",
        "Invoke-ScriptAnalyzer -Settings PSScriptAnalyzerSettings.psd1 -Path ${workspaceFolder} -Recurse"
      ],
      "group": {
        "kind": "test",
        "isDefault": false
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      },
      "problemMatcher": [
        {
          "owner": "powershell",
          "fileLocation": ["relative", "${workspaceFolder}"],
          "severity": "warning",
          "pattern": [
            {
              "regexp": "^\\s*(\\w+)\\s+(.*)\\s+(\\d+):(\\d+)\\s+(.*)$",
              "severity": 1,
              "file": 2,
              "line": 3,
              "column": 4,
              "message": 5
            }
          ]
        }
      ]
    },
    {
      "label": "pwsh: Run Current File",
      "type": "shell",
      "command": "pwsh",
      "args": ["-NoProfile", "-File", "${file}"],
